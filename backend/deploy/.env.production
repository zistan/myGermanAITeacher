# German Learning Application - Production Environment Variables
# Copy this file to /opt/german-learning-app/backend/.env on your server
# IMPORTANT: Update all values marked with REPLACE_*

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://german_app_user:REPLACE_WITH_DB_PASSWORD@localhost/german_learning

# =============================================================================
# AI SERVICES
# =============================================================================
ANTHROPIC_API_KEY=REPLACE_WITH_YOUR_ANTHROPIC_API_KEY

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=German Learning App
DEBUG=False
ENVIRONMENT=production

# =============================================================================
# CORS (Update with your actual domain)
# =============================================================================
CORS_ORIGINS=http://REPLACE_WITH_YOUR_DOMAIN,https://REPLACE_WITH_YOUR_DOMAIN

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# LOGGING (Optional)
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/german-learning/app.log
